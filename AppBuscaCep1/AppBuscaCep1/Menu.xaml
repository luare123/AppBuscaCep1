<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBuscaCep1.Menu">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*, *"
              RowDefinitions="*, *, *, *">

            <Label Grid.Row="0" Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Text="Api Busca Cep" FontSize="20" HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand" Margin="0, 40, 0, 20" TextColor="Black"/>

            <Button Grid.Row="1" Grid.Column="0"
                    Text="Buscar Cep" Clicked="Button_Clicked" FontSize="17" TextColor="Black" BackgroundColor="DarkGray"/>

            <Button Grid.Row="1" Grid.Column="1"
                    Text="Buscar Cidades" FontSize="17" TextColor="Black"/>

            <Button Grid.Row="2" Grid.Column="0" 
                    Text="Buscar Ruas de Bairro" FontSize="17" TextColor="Black"/>

            <Button Grid.Row="2" Grid.Column="1"
                    Text="Api Busca Cep" FontSize="17" TextColor="Black"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>